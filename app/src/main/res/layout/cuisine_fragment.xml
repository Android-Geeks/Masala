<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/cuisine_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cuisines"
        android:padding="16dp"
        android:textColor="@color/black"
        android:textSize="@dimen/big"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:drawableStartCompat="@drawable/arrow_back_24px"
        android:drawablePadding="@dimen/big"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cuisine_recycler_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cuisine_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:spanCount="2"
        android:padding="@dimen/big"
        tool:listitem="@layout/cuisine_screen_card"/>

</androidx.constraintlayout.widget.ConstraintLayout>